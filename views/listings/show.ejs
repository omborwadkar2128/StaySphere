<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.Map_Token %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<style>
  :root {
    --primary-color: #2D9CDB;
    --accent-color: #F2994A;
    --background-color: #F5F7FA;
    --text-color: #333333;
    --light-gray: #ddd;
    --border-radius: 8px;
    --max-width: 1080px; /* Increased from 900px to 1080px */
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
    font-family: 'Plus Jakarta Sans', sans-serif;
    margin: 0;
    padding: 0;
  }

  main.container-show {
    max-width: var(--max-width);
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .hotel-image {
    width: 100%;
    max-height: 450px;
    object-fit: cover;
    border-radius: var(--border-radius);
    margin-bottom: 1.5rem;
    display: block;
  }

  .top-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .title-block {
    flex: 1;
  }

  .hotel-title {
    font-size: 2.8rem;
    font-weight: 900;
    margin-bottom: 0.3rem;
    color: var(--text-color);
  }

  .hotel-description {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
  }

  .hotel-price {
    font-weight: 700;
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: #000;
  }

  .hotel-location {
    font-size: 1rem;
    color: #666;
  }

  .edit-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .edit-buttons .btn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    padding: 0.5rem 1rem;
    font-size: 0.95rem;
  }

  .host-info {
    font-style: italic;
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .host-status {
    font-size: 0.9rem;
    color: #555;
  }

  .booking-info {
    display: flex;
    gap: 2rem;
    border: none;
    border-radius: var(--border-radius);
    background: white;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .booking-block {
    flex: 1;
    text-align: center;
    padding: 0 1rem;
  }

  .booking-block i {
    font-size: 1.6rem;
    color: var(--primary-color);
    display: block;
    margin-bottom: 0.5rem;
  }

  .booking-block h4 {
    font-weight: 700;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .booking-block p {
    font-size: 0.95rem;
    color: #555;
    line-height: 1.3;
  }

  @media (max-width: 768px) {
    .booking-info {
      flex-direction: column;
      padding: 1rem;
    }

    .edit-buttons {
      flex-direction: row;
    }
  }

  #map {
    width: 100%;
    height: 400px;
    border-radius: var(--border-radius);
    margin: 1.5rem 0;
  }

  .review-form > div {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .review-form .avatar {
    width: auto;
    height: 140px;
    aspect-ratio: 1 / 1;
    border-radius: 12px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .review-form > div > div {
    flex: 1;
  }

  .review-form fieldset.starability-slot {
    margin-bottom: 0.5rem;
  }

  .review-form textarea {
    width: 100%;
    border-radius: 12px;
    resize: none;
    padding: 0.75rem;
    font-family: inherit;
    font-size: 1rem;
    line-height: 1.4;
    height: 100px;
    margin-top: -4px;
  }

  .review-form button {
    margin-top: 0.75rem;
    padding: 0.5rem 1.25rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    color: #dc3545;
    border: 1px solid #dc3545;
    background-color: transparent;
    border-radius: 4px;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .review-form button:hover {
    background-color: #dc3545;
    color: white;
  }

  .review-card .card-body {
    display: flex;
    gap: 1rem;
  }

  .review-card img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  hr {
    border: none;
    border-top: 2px solid #999;
    margin: 2rem 0;
  }
</style>

<main class="container-show" role="main" tabindex="-1" aria-labelledby="hotel-title">
  <img src="<%= listing.image.url %>" alt="Image of <%= listing.title %>" class="hotel-image" />

  <div class="top-section">
    <div class="title-block">
      <h1 id="hotel-title" class="hotel-title"><%= listing.title %></h1>
      <p class="hotel-description"><%= listing.description %></p>
      <p class="hotel-price">Price: ‚Çπ <%= listing.price.toLocaleString("en-IN") %></p>
      <p class="hotel-location">Location: <%= listing.location %>, <%= listing.country %></p>
    </div>
    <div class="edit-buttons">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary">
        <i class="fas fa-edit"></i> Edit
      </a>
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-outline-danger">
          <i class="fas fa-trash-alt"></i> Delete
        </button>
      </form>
    </div>
  </div>

  <hr />

  <div style="display: flex; align-items: center; gap: 1rem;">
    <img src="/assets/host.webp" alt="Default Avatar" style="width: 60px; height: 60px; border-radius: 50%;" />
    <div>
      <p class="host-info">Hosted by <strong><%= listing.owner.username %></strong></p>
      <p class="host-status">Superhost - 5+ years of hosting</p>
    </div>
  </div>

  <hr />

  <section class="booking-info" aria-label="Booking information">
    <div class="booking-block">
      <i class="fas fa-calendar-check"></i>
      <h4>Request to book</h4>
      <p>Choose your dates, add your guests, then answer a question about why you want to go.</p>
    </div>
    <div class="booking-block">
      <i class="fas fa-random"></i>
      <h4>Selection process</h4>
      <p>We‚Äôll randomly choose potential guests and review their answers for unique perspectives and connections to the icon.</p>
    </div>
    <div class="booking-block">
      <i class="fas fa-check-circle"></i>
      <h4>Requirements</h4>
      <p>You‚Äôll need an active StaySphere account and the app to participate, and be a resident of an eligible country or region.</p>
    </div>
  </section>

  <hr />

  <div>
    <h4>üìç Where you'll be</h4>
    <div id="map"></div>
  </div>

  <hr />

  <% if (currUser) { %>
    <h4 class="mb-3">Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="review-form needs-validation" novalidate>
      <div>
        <img src="/assets/rating.webp" class="avatar" alt="User Avatar" />
        <div>
          <fieldset class="starability-slot mb-2">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset> 
          <textarea name="review[comment]" class="form-control" rows="4" placeholder="Write your review here...." required></textarea>
          <button class="btn btn-outline-danger" type="submit">Submit</button>
          <div class="invalid-feedback">Please add some comments for review!</div>
        </div>
      </div>
    </form>
    <hr />
  <% } %>

  <% if (listing.reviews.length > 0) { %>
    <h5 class="mt-4 mb-3">All Reviews</h5>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% for (review of listing.reviews) { %>
        <div class="col">
          <div class="card review-card h-100">
            <div class="card-body">
              <img src="/assets/host.webp" alt="Reviewer" />
              <div>
                <h6 class="card-title">@<%= review.author.username %></h6>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><%= review.comment %></p>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</main>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="/js/map.js"></script>
